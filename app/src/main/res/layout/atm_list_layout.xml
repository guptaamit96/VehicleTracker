<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_atmm"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_atm"
            android:layout_marginTop="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/iconvideos"
            />
        <TextView
            android:id="@+id/tv_atm_dista"
            android:layout_below="@+id/iv_atm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="inmortal"

            />
        <TextView
            android:id="@+id/tv_atm_name"
            android:layout_marginStart="25dp"
            android:layout_toRightOf="@+id/iv_atm"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="djcndkdkd"

            />

        <TextView
            android:id="@+id/tv_atm_address"
           android:layout_marginStart="87dp"
            android:layout_below="@+id/tv_atm_name"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inmortaltech"
            />


    </RelativeLayout>
    <View
        android:id="@+id/v_atm"
        android:layout_below="@+id/rl_atmm"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

</RelativeLayout>
