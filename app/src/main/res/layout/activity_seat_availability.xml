<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SeatAvailability">

    <android.support.v7.widget.Toolbar

        android:id="@+id/at_irl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_hm_vh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat Availability"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/v_ir"
        android:layout_below="@+id/at_irl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/rl_seat_sdj"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/v_ir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sorce_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_toRightOf="@+id/tv_sorce_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:layout_marginStart="75dp"
            />

        <TextView
            android:id="@+id/tv_dstnt_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="45dp"/>

        <TextView
            android:layout_toRightOf="@+id/tv_dstnt_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:paddingTop="45dp"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:layout_marginStart="40dp"/>

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Swap"/>


        <TextView
            android:id="@+id/tv_jd_seat"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/tv_dstnt_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey Date"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_jd_sel"
            android:layout_toRightOf="@+id/tv_jd_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
          android:layout_marginTop="95dp"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:layout_marginStart="28dp"/>

        <TextView

            android:id="@+id/tv_tatkal"
            android:layout_marginTop="95dp"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/tv_jd_sel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tatkal"
            android:textStyle="bold"
            android:layout_marginStart="30dp"/>

    <ToggleButton
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/tv_tatkal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/tv_class"
            android:layout_below="@+id/tv_jd_seat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class"/>
        <TextView
            android:layout_toRightOf="@+id/tv_class"
            android:layout_marginTop="142dp"
            android:layout_marginStart="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textSize="18sp"
            android:textColor="@color/green"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_seat_sdj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Check Availability"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@color/green"/>
    </RelativeLayout>


    </RelativeLayout>