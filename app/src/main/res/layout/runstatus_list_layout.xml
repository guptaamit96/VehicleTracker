<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_run"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_run_iden"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="inf"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_run_stname"
            android:layout_toRightOf="@+id/tv_run_iden"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- inmortaltech"
            android:textSize="18sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sxxs"
            android:layout_marginStart="85dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Arrival"
            />
            <TextView
                android:layout_marginStart="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/tv_sxxs"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_exp_arr"
                android:layout_toRightOf="@+id/tv_exp"
                android:layout_marginStart="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qwerty"/>
            <TextView
                android:id="@+id/tv_exp_dep"
                android:layout_toRightOf="@+id/tv_exp_arr"
                android:layout_marginStart="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sjjdh"/>
            <TextView
                android:id="@+id/tv_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day :"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/tv_exp_dep"
                android:layout_marginStart="37dp"/>

            <TextView
                android:id="@+id/tv_day_run"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jj"
                android:layout_toRightOf="@+id/tv_d"
                android:layout_marginStart="2dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_act_arr"
                android:layout_toRightOf="@+id/tv_act"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qwerty"/>
            <TextView
                android:id="@+id/tv_act_dep"
                android:layout_toRightOf="@+id/tv_act_arr"
                android:layout_marginStart="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sjjdh"/>
            <TextView
                android:id="@+id/tv_ds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance :"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/tv_act_dep"
                android:layout_marginStart="37dp"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kk"
                android:layout_toRightOf="@+id/tv_ds"
                android:layout_marginStart="2dp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_runst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Late Min :"
                android:textSize="16sp"
                android:textColor="@color/greenmain"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_min"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_toRightOf="@+id/tv_runst"
                android:layout_marginStart="10dp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_run"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
</RelativeLayout>
