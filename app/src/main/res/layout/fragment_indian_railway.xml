<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IndianRailway">

    <android.support.v7.widget.Toolbar

        android:id="@+id/at_irl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_hm_vh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indian Railway"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/v_ir"
        android:layout_below="@+id/at_irl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <ScrollView
        android:layout_below="@+id/v_ir"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_prt"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_pnr"
                    android:orientation="vertical"
                    android:background="@drawable/corner"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/iconpnr"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PNR"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_runstts"
                    android:layout_toRightOf="@+id/ll_pnr"
                    android:orientation="vertical"
                    android:background="@drawable/corner"
                    android:layout_width="127dp"
                    android:layout_height="120dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/iconrunstts"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Running Status"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_trnrouts"
                    android:layout_toRightOf="@+id/ll_runstts"
                    android:orientation="vertical"
                    android:background="@drawable/corner"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icontrainrout"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trains Routs"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_atm"
                    android:orientation="vertical"
                    android:background="@drawable/corner"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icontrnsrch"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search Trains"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_video"
                    android:layout_toRightOf="@+id/ll_atm"
                    android:orientation="vertical"
                    android:background="@drawable/corner"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/iconseatavl"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Seat Availability"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>