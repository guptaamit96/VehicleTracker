<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_rstt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_restra"
            android:layout_marginTop="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/iconvideos"
            />
        <TextView
            android:id="@+id/tv_restra_dista"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/iv_restra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0.5 km"

            />
        <TextView
            android:id="@+id/tv_restra_name"
            android:layout_marginStart="25dp"
            android:layout_toRightOf="@+id/iv_restra"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="djcndkdkdddddddddddd"

            />

        <TextView
            android:id="@+id/tv_atm_address"
            android:layout_marginStart="87dp"
            android:layout_below="@+id/tv_restra_name"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inmortaltech"
            />


    </RelativeLayout>
    <View
        android:id="@+id/v_r"
        android:layout_below="@+id/rl_rstt"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

</RelativeLayout>
