<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SearchTrains">


    <android.support.v7.widget.Toolbar

        android:id="@+id/at_irl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_hm_vh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Trains"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/v_ir"
        android:layout_below="@+id/at_irl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/rl_sdj"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/v_ir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sorce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_toRightOf="@+id/tv_sorce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:layout_marginStart="80dp"
            />

        <TextView
            android:id="@+id/tv_dstnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="45dp"/>

        <TextView
            android:layout_toRightOf="@+id/tv_dstnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:paddingTop="45dp"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:layout_marginStart="40dp"/>

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Swap"/>

        <TextView
            android:id="@+id/tv_jd"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/tv_dstnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey Date"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <ToggleButton
            android:id="@+id/bt_date"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/tv_jd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bt_date"
            android:text="Date"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
         />


<TextView
    android:layout_marginTop="8dp"
    android:textSize="15sp"
    android:layout_below="@+id/tv_jd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Optional when turned OFF"
    android:textColor="@color/redmain"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_sdj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Search Trains"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@color/green"/>
    </RelativeLayout>
</RelativeLayout>