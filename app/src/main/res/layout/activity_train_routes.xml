<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TrainRoutes">
    <android.support.v7.widget.Toolbar

        android:id="@+id/at_irl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_hm_vh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train Routes"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/v_ir"
        android:layout_below="@+id/at_irl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>


    <RelativeLayout
        android:id="@+id/rl_trainber"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/v_ir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_trainnumber"
            android:gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/corner"
            android:hint="Train Number"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <ImageView
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_trainnumber"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/iconquestion"
        />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_trainber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_View_route"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="View Route"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@color/green"/>
    </RelativeLayout>



</RelativeLayout>