<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">






    <LinearLayout
        android:id="@+id/ll_id_bus_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_source"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Source Address :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_source_bus"
                android:layout_toRightOf="@+id/tv_source"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dehradun"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/tvdes"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Destination Address :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_destination"
                android:layout_toRightOf="@+id/tvdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>



 <RelativeLayout
     android:layout_marginTop="15dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvbus"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Bus Type :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_bus_name"
                android:layout_toRightOf="@+id/tvbus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi -"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_bus_num"
                android:layout_toRightOf="@+id/tv_bus_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                />

     <TextView
         android:id="@+id/stop"
         android:layout_toRightOf="@+id/tv_bus_num"
         android:layout_marginStart="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:text="Stop Number :"
         android:textColor="@color/black"
         android:textSize="15sp" />

     <TextView
         android:id="@+id/tv_num_stop"
         android:layout_toRightOf="@+id/stop"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="two"
         android:textSize="15sp"
         android:layout_marginStart="10dp"
         android:layout_centerVertical="true"
         />
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvdis"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Distance :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_toRightOf="@+id/tvdis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delhi -"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                />


            <TextView
                android:id="@+id/time"
                android:layout_toRightOf="@+id/tv_distance"
                android:layout_marginStart="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Time :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_toRightOf="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="two"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/tvarr"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Arrival Time :"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_arr_time"
                android:layout_toRightOf="@+id/tvarr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:12 AM"
                android:textSize="15sp"
                android:layout_marginStart="2dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tvdep"
                android:layout_toRightOf="@+id/tv_arr_time"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Departure Time :"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_dep_time"
                android:layout_toRightOf="@+id/tvdep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:12 AM"
                android:textSize="15sp"
                android:layout_marginStart="2dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>



    </LinearLayout>

    <View
        android:layout_below="@+id/ll_id_bus_detail"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />

</RelativeLayout>
